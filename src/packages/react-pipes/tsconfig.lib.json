{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "declaration": true,
    "declarationDir": "./main/@types",
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "outDir": "./main",

    /* Linting */
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src",
  ],
}
