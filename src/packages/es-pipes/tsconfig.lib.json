{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "declaration": true,
    "declarationDir": "./main/@types",
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "outDir": "./main",

    /* Linting */
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src",
  ],
}
